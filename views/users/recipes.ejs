        integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="/assets/styleHome.css">
    <title>CookBook - Recipes</title>
</head>
<!--NAV BAR-->
<%- include('../layouts/navbar.ejs') %>

<!--Page Content-->
<div class="container px-4 px-lg-5">
    <!--Heading Row-->

    <%
    if(recipes.length > 0){

        for(let i = 0; i < recipes.length; i++){

            %>
        <div class="row gx-4 gx-lg-5 align-items-center my-5">
            <div class="col-lg-7">
                <%
                    if(recipes[i].image !== undefined && recipes[i].image !== ''){
                        %>
                        <img src="<%= recipes[i].image %>" alt="... " class="img-fluid rounded mb-4 mb-lg-0"/>
                        <%
                    }
                    else{
                        %>
                        <img src="https://dummyimage.com/900x400/ced4da/6c757d.jpg" alt="Image Recipe" class="img-fluid rounded mb-4 mb-lg-0">
                        <%
                    }
                %>
            </div>
            <div class="col-lg-5">
                <h1 class="font-weight-light"><%= recipes[i].title %></h1>
                <p><%= recipes[i].description %></p>
                <p><%= recipes[i].ingredients %></p>
                <a href="recipes/<%= recipes[i]._id %>" class="btn btn-primary">Red More</a>
            </div>
        </div>
        </div>
        <%

        }
        
    }
    else{
        %>
            <h1>Posts not available!</h1>
        <%
    }
    %>






<!--Footer-->
<%- include('../layouts/footer.ejs') %>